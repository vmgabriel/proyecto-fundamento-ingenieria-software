extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Datos de Entrenador
      img(class="redondo", src="/public/images/rol.jpg" alt="Imagen de la Sucursal")
      p Los datos del entrenador seleccionado est√° aqui mencionado
    
    ul(class="alt")
      li
        h4 Numero de Cedula del entrenador:
        p= entrenador.n_ced
      li
        h4 Nombre del entrenador:
        p= entrenador.s_nombre
      li
        h4 Apellido del entrenador:
        p= entrenador.s_apellido
      li
        h4 Correo del entrenador:
        p= entrenador.s_correo
      li
        h4 Telefono del entrenador:
        p= entrenador.n_telefono
      li
        h4 Usuario del entrenador:
        p= entrenador.s_usuario
      li
        h4 Descripcion del entrenador:
        p= entrenador.s_descripcion
      li
        h4 Sucursal del entrenador:
        a(href="/platform/sucursal/#{entrenador.s_sucursal}") Ver
  div(class="row")
    div(class='6u$')
      ul.actions
        li
          a(href="/platform/entrenador/#{entrenador._id}/edit", class="button") Editar
    div(class='6u$')
      ul.actions
        li
          form(action="/platform/entrenador/#{entrenador._id}?_method=DELETE", method="POST")
            input.special(value='Eliminar', type='submit')

  include ../../template/footer.jade
