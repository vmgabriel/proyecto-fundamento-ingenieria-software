extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Nuevo Torneo
      p Ingrese los datos solicitados para ingresarlo a la base de datos
    h3 Formulario
    form(method='POST', action='/platform/torneo')
      .row.uniform(class='50%')
        div(class='12u$')
          label(for="nombre") Ingrese Nombre:
          input(name='nombre', value='', placeholder='Nombre', type='text')
        div(clas="12u$")
          label(for="fecha") Ingrese Fecha de Torneo:
          input(id="fecha", class="fecha", name="fecha" ,type="date")
        div(class='12u$')
          label(for="ranking") Ingrese Ranking:
          input(name='ranking', value='', placeholder='Ranking de Torneo', type='text')
        div(class='12u$')
          label(for="ciudad") Ingrese Ciudad:
          input(name='ciudad', value='', placeholder='Ciudad', type='text')
        div(class='12u$')
          label(for="pais") Ingrese Pais:
          input(name='pais', value='', placeholder='Pais', type='text')
        div(class='12u$')
          label(for="puesto") Ingrese Puesto en el Torneo:
          input(name='puesto', value='', placeholder='Puesto en el Torneo', type='text')
          
        .table-wrapper
          h4 Seleccione Estudiante
          table.alt
              thead
                tr
                  th Seleccion
                  th Nit
                  th Cedula
                  th Nombre
                  th Apellido
                  th Correo
                  th Colegio
              tbody
                for estudiante in estudiantes
                  tr
                    td 
                      input(id="#{estudiante._id}", value="#{estudiante._id}", checked='', name='estudiante', type='radio')
                      label(for="#{estudiante._id}") .
                    td= estudiante.n_nit
                    td= estudiante.n_cedula
                    td= estudiante.s_nombre
                    td= estudiante.s_apellido
                    td= estudiante.s_correo
                    td= estudiante.s_colegio
          
          ul.actions
            li
              input.special(value='Registrar', type='submit')
            li
              input(value='Borrar', type='reset')

  include ../../template/footer.jade
