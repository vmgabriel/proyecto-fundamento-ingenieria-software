extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Datos de Evento
      img(class="redondo", src="/public/images/rol.jpg" alt="Imagen de la Sucursal")
      p Los datos del Evento seleccionado est√° aqui mencionado
    
    ul(class="alt")
      li
        h4 Nombre del evento:
        p= evento.s_nombre
      li
        h4 Fecha del evento:
        p= evento.d_fecha
      li
        h4 Direccion del evento:
        p= evento.s_direccion
      li
        h4 Ciudad del evento:
        p= evento.s_ciudad
      li
        h4 Pais del evento:
        p= evento.s_pais
      li
        h4 Telefono del evento:
        p= evento.n_telefono
        
    div(class="row")
      div(class='6u$')
        ul.actions
          li
            a(href="/platform/evento/#{evento._id}/edit", class="button") Editar
      div(class='6u$')
        ul.actions
          li
            form(action="/platform/evento/#{evento._id}?_method=DELETE", method="POST")
              input.special(value='Eliminar', type='submit')
        
  include ../../template/footer.jade
