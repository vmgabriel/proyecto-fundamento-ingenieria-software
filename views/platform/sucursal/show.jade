extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Datos de Sucursal
      img(class="redondo", src="/public/images/rol.jpg" alt="Imagen de la Sucursal")
      p Los datos de la sucursal seleccionada est√° aqui mencionado
    
    ul(class="alt")
      li
        h4 Nombre de la Sucursal:
        p= sucursal.s_nombre
      li
        h4 Direccion de la Sucursal:
        p= sucursal.s_direccion
      li
        h4 Categorias de la Sucursal:
        p= sucursal.i_cantidadCategorias
      li
        h4 Ciudad de la ciudad:
        p= sucursal.s_ciudad
        
        
  div(class="row")
    div(class='6u$')
      ul.actions
        li
          a(href="/platform/sucursal/#{sucursal._id}/edit", class="button") Editar
    div(class='6u$')
      ul.actions
        li
          form(action="/platform/sucursal/#{sucursal._id}?_method=DELETE", method="POST")
            input.special(value='Eliminar', type='submit')

  include ../../template/footer.jade
