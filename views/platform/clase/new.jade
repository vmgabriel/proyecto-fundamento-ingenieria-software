extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Nueva Clase
      p Ingrese los datos solicitados para ingresarlo a la base de datos
    h3 Formulario
    form(method='POST', action='/platform/clase')
      .row.uniform(class='50%')
        div(class='12u$')
            label(for="tipo_clase") Ingrese Tipo de Clase:
            input#name(name='tipo_clase', value='', placeholder='Tipo de Clase', type='text')
        div(class='12u$')
          label(for="ciudad") Ingrese Ciudad:
          input(name='ciudad', value='', placeholder='Ciudad', type='text')
        
        .table-wrapper
          h4 Seleccione Sesion
          table.alt
              thead
                tr
                  th Seleccion
                  th Tipo
                  th Fecha Inicio
                  th Fecha Fin
                  th Intensidad
              tbody
                for sesion in sesiones
                  tr
                    td 
                      input(id="#{sesion._id}", value="#{sesion._id}", checked='', name='sesion', type='radio')
                      label(for="#{sesion._id}") .
                    td= sesion.s_tipo_entrenamiento
                    td= sesion.d_fecha_entrenamiento_inicio
                    td= sesion.d_fecha_entrenamiento_fin
                    td= sesion.s_intensidad
                    
        .table-wrapper
          h4 Seleccione Estudiante
          table.alt
              thead
                tr
                  th Seleccion
                  th Nit
                  th Cedula
                  th Nombre
                  th Apellido
                  th Correo
                  th Colegio
              tbody
                for estudiante in estudiantes
                  tr
                    td 
                      input(id="#{estudiante._id}", value="#{estudiante._id}", checked='', name='estudiante', type='radio')
                      label(for="#{estudiante._id}") .
                    td= estudiante.n_nit
                    td= estudiante.n_cedula
                    td= estudiante.s_nombre
                    td= estudiante.s_apellido
                    td= estudiante.s_correo
                    td= estudiante.s_colegio
                    
        div(class="12u$")
          label(for="caracteristica") Ingrese Caracteristicas de la clase:
          textarea(id="caracteristica" name="caracteristica" placeholder="Caracteristicas de la clase" rows=6)
        
        div(class='12u$')
          ul.actions
            li
              input.special(value='Registrar', type='submit')
            li
              input(value='Borrar', type='reset')

  include ../../template/footer.jade
