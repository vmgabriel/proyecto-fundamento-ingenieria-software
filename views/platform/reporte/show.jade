extends ../../template/layout.jade
block contenido
  include ../../template/header.jade

  div(class="container")
    header(class="major special")
      h2 Datos de Reporte
      img(class="redondo", src="/public/images/rol.jpg" alt="Imagen de la reporte")
      p Los datos del reporte seleccionada est√° aqui mencionado
    
    ul(class="alt")
      li
        h4 Tipo de reporte:
        p= reporte.s_tipo_reporte
      li
        h4 Fecha de reporte:
        p= reporte.d_fecha_reporte
      li
        h4 Banco de reporte:
        p= reporte.s_reporte_banco
      li
        h4 Cantidad de reporte:
        p= reporte.n_cantidad_reporte
      li
        h4 Codigo de reporte:
        p= reporte.n_codigo_reporte
      li
        h4 Pago de Reporte:
        p
          a(href="/platform/pago/#{reporte.i_pago}") Ver
          
          
  div(class="row")
    div(class='6u$')
      ul.actions
        li
          a(href="/platform/reporte/#{reporte._id}/edit", class="button") Editar
    div(class='6u$')
      ul.actions
        li
          form(action="/platform/reporte/#{reporte._id}?_method=DELETE", method="POST")
            input.special(value='Eliminar', type='submit')

  include ../../template/footer.jade
